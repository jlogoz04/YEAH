<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Statistics</title>
  <link rel="stylesheet" href="/public/css/styles.css"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
</head>
<body>
  <%- include('partials/header') %>
  <main class="container">
    <h1>Statistics</h1>

    <section class="stats-cards">
      <div class="card">
        <h3>Highest scoreline</h3>
        <% if (stats.highestScorelines.length === 0) { %>
          <p>No completed matches yet.</p>
        <% } else { %>
          <ul>
            <% stats.highestScorelines.forEach(m => { %>
              <li>Round <%= m.round %>: <%= m.home_code %> <%= m.home_goals %> - <%= m.away_goals %> <%= m.away_code %> (total <%= m.home_goals + m.away_goals %>)</li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      <div class="card">
        <h3>Biggest win</h3>
        <% if (stats.biggestWins.length === 0) { %>
          <p>No completed matches yet.</p>
        <% } else { %>
          <ul>
            <% stats.biggestWins.forEach(m => { %>
              <li>Round <%= m.round %>: <%= m.home_code %> <%= m.home_goals %> - <%= m.away_goals %> <%= m.away_code %> (Δ <%= Math.abs(m.home_goals - m.away_goals) %>)</li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      <div class="card">
        <h3>Most wins</h3>
        <% if (stats.mostWins.max === -1 || stats.mostWins.max === 0) { %>
          <p>—</p>
        <% } else { %>
          <ul>
            <% stats.mostWins.list.forEach(t => { %>
              <li><%= t.name %> — <%= t.value %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      <div class="card">
        <h3>Most draws</h3>
        <% if (stats.mostDraws.max === -1 || stats.mostDraws.max === 0) { %>
          <p>—</p>
        <% } else { %>
          <ul>
            <% stats.mostDraws.list.forEach(t => { %>
              <li><%= t.name %> — <%= t.value %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      <div class="card">
        <h3>Most losses</h3>
        <% if (stats.mostLosses.max === -1 || stats.mostLosses.max === 0) { %>
          <p>—</p>
        <% } else { %>
          <ul>
            <% stats.mostLosses.list.forEach(t => { %>
              <li><%= t.name %> — <%= t.value %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      <div class="card">
        <h3>Least goals involvement (GF+GA)</h3>
        <% if (stats.leastGoalsTeams.length === 0) { %>
          <p>—</p>
        <% } else { %>
          <ul>
            <% stats.leastGoalsTeams.forEach(t => { %>
              <li><%= t.name %> — <%= t.value %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      <div class="card">
        <h3>Most goals involvement (GF+GA)</h3>
        <% if (stats.mostGoalsTeams.length === 0) { %>
          <p>—</p>
        <% } else { %>
          <ul>
            <% stats.mostGoalsTeams.forEach(t => { %>
              <li><%= t.name %> — <%= t.value %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </section>

    <section>
      <h2>Team Positions by Round</h2>
      <p>Y-axis is ladder position (10 at bottom → 1 at top).</p>
      <div class="charts-grid">
        <% teams.forEach(t => { %>
          <div class="chart-card">
            <h4><%= t.name %> (<%= t.code %>)</h4>
            <canvas id="chart-<%= t.code %>"></canvas>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <script>
    const positions = <%- JSON.stringify(positions) %>;
    const teams = <%- JSON.stringify(teams) %>;
    teams.forEach(t => {
      const ctx = document.getElementById('chart-' + t.code).getContext('2d');
      const data = positions[t.code];
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: Array.from({length: 18}, (_,i) => i+1),
          datasets: [{
            label: t.name,
            data,
            tension: 0.25,
            pointRadius: 3
          }]
        },
        options: {
          responsive: true,
          scales: {
            y: {
              reverse: true,
              suggestedMin: 1,
              suggestedMax: 10,
              ticks: { stepSize: 1 },
              title: { display: true, text: 'Position' }
            },
            x: { title: { display: true, text: 'Round' } }
          },
          plugins: {
            legend: { display: false },
            tooltip: { enabled: true }
          }
        }
      });
    });
  </script>
</body>
</html>
