<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin</title>
  <link rel="stylesheet" href="/public/css/styles.css"/>
  <script defer src="/public/js/main.js"></script>
</head>
<body>
  <%- include('partials/header') %>
  <main class="container">
    <h1>Admin â€“ Enter Scores</h1>
    <div class="controls">
      <form method="get" action="/admin">
        <label for="roundSelect">Select Round:</label>
        <select id="roundSelect" name="round">
          <% for (let r=1; r<=18; r++) { %>
            <option value="<%= r %>" <%= r === round ? 'selected' : '' %>>Round <%= r %></option>
          <% } %>
        </select>
        <button type="submit">Go</button>
      </form>
    </div>

    <form method="post" action="/admin/save" class="admin-form">
      <input type="hidden" name="round" value="<%= round %>" />
      <table class="admin-table">
        <thead>
          <tr>
            <th>Fixture</th>
            <th>Home Goals</th>
            <th>Away Goals</th>
          </tr>
        </thead>
        <tbody>
          <% fixtures.forEach(m => { %>
            <tr>
              <td><%= m.home_name %> vs <%= m.away_name %></td>
              <td><input type="number" min="0" step="1" name="score_<%= m.id %>_home" value="<%= m.home_goals !== null ? m.home_goals : '' %>"/></td>
              <td><input type="number" min="0" step="1" name="score_<%= m.id %>_away" value="<%= m.away_goals !== null ? m.away_goals : '' %>"/></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <button type="submit">Save Scores</button>
    </form>
  </main>
</body>
</html>
