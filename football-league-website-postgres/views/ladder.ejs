<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Ladder</title>
  <link rel="stylesheet" href="/public/css/styles.css"/>
  <script defer src="/public/js/main.js"></script>
</head>
<body>
  <%- include('partials/header') %>
  <main class="container">
    <h1>Ladder</h1>
    <div class="controls">
      <label for="roundSelect">View ladder as of Round:</label>
      <select id="roundSelect" data-target="/ladder">
        <% for (let r=1; r<=18; r++) { %>
          <option value="<%= r %>" <%= r === round ? 'selected' : '' %>>Round <%= r %></option>
        <% } %>
      </select>
    </div>

    <table class="ladder">
      <thead>
        <tr>
          <th>Pos</th><th>Team</th><th>P</th><th>W</th><th>D</th><th>L</th><th>GF</th><th>GA</th><th>GD</th><th>Pts</th>
        </tr>
      </thead>
      <tbody>
        <% table.forEach(t => { %>
          <tr>
            <td><%= t.pos %></td>
            <td><%= t.name %></td>
            <td><%= t.played %></td>
            <td><%= t.wins %></td>
            <td><%= t.draws %></td>
            <td><%= t.losses %></td>
            <td><%= t.gf %></td>
            <td><%= t.ga %></td>
            <td><%= t.gd %></td>
            <td><%= t.pts %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html>
